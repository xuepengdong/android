<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/tv_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello"
                android:textSize="130px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前端部（px大小）"
                android:textSize="30px"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前端部（dp大小）"
                android:textSize="30dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前端部（sp大小）"
                android:textColor="@color/red"
                android:textSize="30sp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints,UnknownIdInLayout">
                <Button
                    android:id="@+id/mybutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到ViewBorderActivity"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/activity_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到activity_linear_layout"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/activity_relative_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到RelativeLayoutActivity"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/activity_grid_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到activity_grid_layout"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/scrollLayoutActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到scrollLayoutActivity"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/activity_button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到activity_button_style"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />


                <Button
                    android:id="@+id/activity_button_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到activity_button_click"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />
                <Button
                    android:id="@+id/activity_button_longclick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到activity_button_longclick"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/activity_button_enable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到activity_button_enable"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/activity_image_scale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到activity_image_scale"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />


                <Button
                    android:id="@+id/activity_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到activity_image_button"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />


                <Button
                    android:id="@+id/activity_image_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到activity_image_text"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/activity_act_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到activity_act_finish"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/activity_act_life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到activity_act_life"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />
                <Button
                    android:id="@+id/activity_first_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转到activity_first_activity"
                    android:layout_centerInParent="true"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>